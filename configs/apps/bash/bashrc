# Removes special terminal character sequences (for example generated by script command)
alias unterm="perl -pe 's/\e([^\[\]]|\[.*?[a-zA-Z]|\].*?\a)//g' | col -b"

function my_netns {
    local netns=$(ip netns identify $$)

    if [[ "$netns" != "" ]]; then
        echo -e ":$netns"
    fi
}

PS1="[\u@\h \W$(my_netns)]\$ "
